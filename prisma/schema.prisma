datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @map("_id") @db.ObjectId
  user_name  String
  password   String
  first_name String
  last_name  String
  email      String   @unique
  school     String
  teamIDs    String[] @db.ObjectId
  teams      Team[]   @relation(fields: [teamIDs], references: [id])
  skillIDs   String[] @db.ObjectId
  skills     Skill[]  @relation(fields: [skillIDs], references: [id])
}

model Team {
  id        String   @id @map("_id") @db.ObjectId
  team_name String
  userIDs   String[] @db.ObjectId
  users     User[]   @relation(fields: [userIDs], references: [id])
  skillIDs  String[] @db.ObjectId
  skills    Skill[]  @relation(fields: [skillIDs], references: [id])
}

model Skill {
  id         String @id @map("_id") @db.ObjectId
  skill_name String
  category   String

  userIDs String[] @db.ObjectId
  users   User[]   @relation(fields: [userIDs], references: [id])
  teamIDs String[] @db.ObjectId
  teams   Team[]   @relation(fields: [teamIDs], references: [id])
}
