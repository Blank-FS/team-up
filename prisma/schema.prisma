datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id    String   @id @default(uuid()) @map("_id")
  user_name  String   @unique
  first_name String
  last_name  String
  role       String   @default("")
  bio        String   @default("")
  email      String   @unique
  school     String   @default("")
  teamIDs    String[] @default([])
  teams      Team[]   @relation(fields: [teamIDs], references: [team_id])
  skillIDs   String[] @default([])
  skills     Skill[]  @relation(fields: [skillIDs], references: [skill_id])

  @@unique([teamIDs])
  @@unique([skillIDs])
}

model Team {
  team_id     String   @id @default(uuid()) @map("_id")
  team_name   String   @unique
  description String   @default("")
  userIDs     String[] @default([])
  users       User[]   @relation(fields: [userIDs], references: [user_id])
  skillIDs    String[] @default([])
  skills      Skill[]  @relation(fields: [skillIDs], references: [skill_id])

  @@unique([userIDs])
  @@unique([skillIDs])
}

model Skill {
  skill_id   String   @id @default(uuid()) @map("_id")
  skill_name String   @unique
  userIDs    String[] @default([])
  users      User[]   @relation(fields: [userIDs], references: [user_id])
  teamIDs    String[] @default([])
  teams      Team[]   @relation(fields: [teamIDs], references: [team_id])

  @@unique([userIDs])
  @@unique([teamIDs])
}
